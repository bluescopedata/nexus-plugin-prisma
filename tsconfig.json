{
  "compilerOptions": {
    // "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    // "sourceMap": true,
    // "declarationMap": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["./**/*.spec.ts", "tests", ".yarn", "examples", ".vscode", ".github"]
}
